@model DiversHotel.Models.RoomType
    <div class="container">
        <h1 style="text-align:center" class="mt-3">Delete Room Type</h1>
        <form method="post" asp-action="DeletePost">
            <input asp-for="Id" hidden />
            <div class="mb-3">
                <label asp-for="roomType" class="form-label">Room Type</label>
                <input asp-for="roomType" disabled type="text" class="form-control">
                <label asp-for="ratePerPreson" class="form-label">Rate Per Person</label>
                <input asp-for="ratePerPreson" disabled type="number" class="form-control">
            </div>
            <div class="row justify-content-around">
                <input type="submit" class="btn btn-danger col-2" value="delete" />
                <a class="btn btn-success col-2" asp-area="" asp-controller="Room" asp-action="Index">Back</a>
            </div>
        </form>
    </div>