@model DiversHotel.Models.RoomType
    <div class="container">
        <h1 style="text-align:center" class="mt-3">Update Room Type</h1>
        <form method="post" asp-action="Update">
            <input asp-for="Id" hidden />
            <div class="mb-3">
                <label asp-for="roomType" class="form-label">Room Type</label>
                <input asp-for="roomType" type="text" class="form-control">
                <label asp-for="ratePerPreson" class="form-label">Rate Per Person</label>
                <input asp-for="ratePerPreson" type="number" class="form-control">
            </div>
            <div class="row justify-content-around">
                <input type="submit" class="btn btn-info col-2" value="update" />
                <a class="btn btn-danger col-2" asp-area="" asp-controller="Room" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
