@model DiversHotel.Models.MealPlans
    <div class="container">
        <h1 style="text-align:center" class="mt-3">Update Meal Plane</h1>
        <form method="post" asp-action="Update" class="mt-5">
            <input asp-for="Id" hidden />
            <div class="mb-3">
                <label asp-for="mealPlans" class="form-label">Meal Plan</label>
                <input asp-for="mealPlans" type="text" class="form-control">
                <label asp-for="ratePerPerson_low_season" class="form-label">Rate Per person Low Season</label>
                <input asp-for="ratePerPerson_low_season" type="number" class="form-control">
                <label asp-for="ratePerPerson_high_season" class="form-label">Rate Per person High Season</label>
                <input asp-for="ratePerPerson_high_season" type="number" class="form-control">
            </div>
            <div class="row justify-content-around">
                <input type="submit" class="btn btn-info col-2" value="Update" />
                <a class="btn btn-danger col-2" asp-area="" asp-controller="Meal" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
